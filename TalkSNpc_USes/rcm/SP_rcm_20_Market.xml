<anim id="BigSmile" target="mainNpc" targetSpec="" /><anim id="BigSmile" target="4" targetSpec="N2" />¡Bienvenid<gender2 m="o" f="a" /> a <colour id="1" /><tag a="50" b="0" arg="0x1 0xcd00" />MiniNook<colour id="65535" />!</message>
