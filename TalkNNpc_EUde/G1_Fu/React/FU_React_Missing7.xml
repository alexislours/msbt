	<message label="001_01" attrib="00 00 00 00 00 00 00 00"><anim id="Shocked" target="actor" targetSpec="" /><tag a="50" b="3" /><tag a="110" b="3" />! <delay20 /><anim id="Worried" target="actor" targetSpec="" />Wo hast du
