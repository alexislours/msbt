<anim id="Laughing" target="actor" targetSpec="" /><delay20 />AHAHAH!<anim id="Smiling" target="actor" targetSpec="" /></message>
	<message label="011" attrib="00 00 00 00 00 00 00 00"><anim id="Explain" target="actor" targetSpec="" />Da quando hanno aperto la <colour id="1" />sartoria<colour id="65535" />,<delay20 />
