	<message label="204" attrib="00 00 00 00 00 00 00 00"><anim id="Worried" target="actor" targetSpec="" />Capisco. <delay20 />Non c'è problema<tag a="110" b="0" /></message>
	<message label="205" attrib="00 00 00 00 00 00 00 00"><anim id="Worried" target="actor" targetSpec="" />OK<tag a="110" b="0" /> <anim id="EmotEnd" target="actor" targetSpec="" />Beh, <anim id="FaintSmile" target="actor" targetSpec="" />allora rilassati e basta!</message>
