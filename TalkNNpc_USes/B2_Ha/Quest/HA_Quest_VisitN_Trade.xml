	<message label="100_a" attrib="00 00 00 00 00 00 00 00">¡Qué ofertón!</message>
	<message label="100_b" attrib="00 00 00 00 00 00 00 00">Bueno, no...</message>
	<message label="101" attrib="00 00 02 00 00 00 00 00"><anim id="BigSmile" target="actor" targetSpec="" />¿<tag a="50" b="3" /><tag a="50" b="1" /><tag a="125" b="0" arg="0x0" />?<delay8 />
<anim id="Nodding" target="actor" targetSpec="" />Te <tag a="50" b="17" arg="0x12 0xcd00 0x4 0x6c 0x6f 0x4 0x6c 0x61 0x0" /> vendo por <tag a="90" b="21" arg="0x0" />.</message>
	<message label="101_a" attrib="00 00 00 00 00 00 00 00">¡Trato hecho!</message>
	<message label="101_b" attrib="00 00 00 00 00 00 00 00">No...</message>
	<message label="102" attrib="00 00 02 00 00 00 00 00"><anim id="Nodding" target="actor" targetSpec="" />Mi <tag a="125" b="0" arg="0x0" /><tag a="110" b="0" /><delay8 />
¡Te <tag a="50" b="17" arg="0x12 0xcd00 0x4 0x6c 0x6f 0x4 0x6c 0x61 0x0" /> vendo por <tag a="90" b="21" arg="0x0" />!</message>
	<message label="102_a" attrib="00 00 00 00 00 00 00 00">¡Compro!</message>
	<message label="102_b" attrib="00 00 00 00 00 00 00 00">No compro</message>
	<message label="103" attrib="00 00 00 00 00 00 00 00"><anim id="Eh" target="actor" targetSpec="" />¿No?<delay8 /> <anim id="Laughing" target="actor" targetSpec="" />¡Bue, tú verás!</message>
	<message label="104" attrib="00 00 00 00 00 00 00 00"><anim id="Eh" target="actor" targetSpec="" />¿Eh?<delay8 /> Parece que no tienes bayas
suficientes<tag a="110" b="0" /><delay8 /> <anim id="Worried" target="actor" targetSpec="" />Lo siento, ¡pero gratis
sería demasiado barato!</message>
	<message label="200" attrib="00 00 00 00 00 00 00 00"><anim id="Smiling" target="actor" targetSpec="" />¡Que te sea útil!</message>
	<message label="201" attrib="00 00 00 00 00 00 00 00"><anim id="Smiling" target="actor" targetSpec="" />¡Trato hecho!</message>
	<message label="202" attrib="00 00 00 00 00 00 00 00"><anim id="HappyDance" target="actor" targetSpec="" />¡Gracias!<delay8 /> ¡Me encanta hacer
negocios contigo!</message>
	<message label="203" attrib="00 00 00 00 00 00 00 00"><anim id="Blushing" target="actor" targetSpec="" />Te llevas un poco del sudor de mi
frente<tag a="110" b="0" /><delay8 /> <anim id="BigSmile" target="actor" targetSpec="" />¡Literal!</message>
	<message label="204" attrib="00 00 00 00 00 00 00 00"><anim id="ShyBoy" target="actor" targetSpec="" />Espero que trates esta compra
como si se tratara de tu propia
bicicleta estática<tag a="110" b="0" /></message>
	<message label="205" attrib="00 00 00 00 00 00 00 00"><anim id="Nodding" target="actor" targetSpec="" />Me quitas una parte de mi vida<tag a="110" b="0" /><delay8 />
<anim id="Greeting" target="actor" targetSpec="" />¡pero un trato es un trato!</message>
	<message label="206" attrib="00 00 00 00 00 00 00 00"><anim id="Eh" target="actor" targetSpec="" />¡Ah!<delay20 /> Tienes los bolsillos llenos,
