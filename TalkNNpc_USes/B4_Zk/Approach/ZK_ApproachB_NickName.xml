	<message label="001_a" attrib="00 00 00 00 00 00 00 00"><anim id="EmotEnd" target="player" targetSpec="" />¿Cuál?
<anim id="EmotEnd" target="player" targetSpec="" />¡Sorpréndeme!</message>
