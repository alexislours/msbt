	<message label="100_b" attrib="00 00 00 00 00 00 00 00">Creo que paso
<anim id="EmotEnd" target="actor" targetSpec="" />No sé...</message>
	<message label="101" attrib="00 00 00 00 00 00 00 00"><anim id="Nodding" target="actor" targetSpec="" />Entendido.<delay20 /> <anim id="Negative" target="actor" targetSpec="" />Si no quieres un nuevo
