	<message label="001_02" attrib="00 00 00 00 00 00 00 00"><anim id="Sleep" target="actor" targetSpec="" />Umfff<tag a="110" b="0" /><delay20 /> ummm<tag a="110" b="0" /><delay20 /> <anim id="Pardon" target="actor" targetSpec="" />¡¿"No capisco"?!<10_7 arg="90" /></message>
