<tag a="110" b="3" />.</message>
	<message label="110" attrib="00 00 00 00 00 00 00 00"><anim id="Eh" target="actor" targetSpec="" />¿Eh?<delay20 /> <anim id="Confused" target="actor" targetSpec="" />Venga, no seas mal<gender2 m="o" f="a" />
