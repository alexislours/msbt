	<message label="002" attrib="00 00 00 00 00 00 00 00"><anim id="Hello" target="actor" targetSpec="" />¡Ya estamos aquí!</message>
	<message label="003" attrib="00 00 00 00 00 00 00 00"><anim id="FaintSmile" target="actor" targetSpec="" />¡Qué contenta estoy de poder
visitar tu casa!</message>
	<message label="004" attrib="00 00 00 00 00 00 00 00">¡Hola, hola!<delay20 />
