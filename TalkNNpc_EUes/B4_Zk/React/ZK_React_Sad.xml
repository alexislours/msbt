	<message label="001" attrib="00 00 00 00 00 00 00 00"><tag a="100" b="1" /><anim id="Sighing" target="actor" targetSpec="" />Ay<tag a="110" b="0" /><delay20 /> Perdona,<delay8 /> <tag a="110" b="3" />,<delay8 />
