<msbt attribsize="8">
	<message label="001" attrib="00 00 00 00 00 00 00 00">¡Oye, <tag a="110" b="3" />!<delay20 /> Soy yo.<10_7 arg="120" /></message>
	<message label="002" attrib="00 00 00 00 00 00 00 00">«Excuse me»,<delay8 /> soy <tag a="110" b="10" />.<delay20 />
