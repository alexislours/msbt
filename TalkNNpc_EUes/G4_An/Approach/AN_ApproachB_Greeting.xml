	<message label="003_a" attrib="00 00 00 00 00 00 00 00"><anim id="EmotEnd" target="player" targetSpec="" />Tengo una idea genial</message>
	<message label="003_b" attrib="00 00 00 00 00 00 00 00"><anim id="EmotEnd" target="player" targetSpec="" />No sé...</message>
	<message label="004" attrib="00 00 02 00 00 00 00 00"><anim id="Cheering" target="actor" targetSpec="" />¡Oye, <tag a="110" b="3" />!<delay8 />
