	<message label="002_a" attrib="00 00 00 00 00 00 00 00"><anim id="EmotEnd" target="player" targetSpec="" />¡Ya sé cuál!</message>
	<message label="002_b" attrib="00 00 00 00 00 00 00 00"><anim id="Negative" target="actor" targetSpec="" />Me gusta el de ahora</message>
	<message label="003" attrib="00 00 02 00 00 00 00 00">¡Oye, <tag a="110" b="3" />! <delay20 />
