	<message label="002" attrib="00 00 00 00 00 00 00 00"><tag a="100" b="0" /><anim id="Angry" target="actor" targetSpec="" />¡Ahora mismo<delay8 /> <anim id="Outraged" target="actor" targetSpec="" />tengo enfadados
