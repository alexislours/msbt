	<message label="003" attrib="00 00 00 00 00 00 00 00"><anim id="OhGeez" target="actor" targetSpec="" />Tu n'as pas envie, c'est ça ?<delay frames="40" /><anim id="Grin" target="actor" targetSpec="" />
