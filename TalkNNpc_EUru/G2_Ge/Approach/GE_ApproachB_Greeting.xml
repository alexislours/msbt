	<message label="102_b" attrib="00 00 00 00 00 00 00 00">Не-а.</message>
	<message label="103" attrib="00 00 00 00 00 00 00 00"><anim id="ShyBoy" target="actor" targetSpec="" />Прошу прощения. <anim id="Hello" target="actor" targetSpec="" />Слушай, ты<delay20 />
