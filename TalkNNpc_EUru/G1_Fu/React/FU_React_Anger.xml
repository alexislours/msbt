	<message label="102" attrib="00 00 00 00 00 00 00 00"><tag a="100" b="0" /><anim id="Angry" target="actor" targetSpec="" /><tag a="115" b="1" arg="0xcd00" /> просто не понимает,<delay frames="40" />
