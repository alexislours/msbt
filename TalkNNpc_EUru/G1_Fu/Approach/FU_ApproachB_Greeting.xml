	<message label="200" attrib="00 00 00 00 00 00 00 00"><anim id="Hello" target="actor" targetSpec="" />«<tag a="50" b="3" /><tag a="110" b="14" />Как жизнь<endTag a="110" b="14" />?»<delay8 />
<anim id="Love" target="actor" targetSpec="" />Так здорово!</message>
