	<message label="220_b" attrib="00 00 00 00 00 00 00 00"><anim id="EmotEnd" target="actor" targetSpec="" />Oui, je n'y peux rien.</message>
	<message label="221" attrib="00 00 00 00 00 00 00 00"><anim id="Shocked" target="actor" targetSpec="" />Quoi, tu veux dire que c'est toi
