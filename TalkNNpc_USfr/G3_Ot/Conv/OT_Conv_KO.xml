	<message label="006" attrib="00 00 00 00 00 00 00 00">Hein?! <delay20 /><20_2 arg="4" /><anim id="FaintSmile" target="mainNpc" targetSpec="" />Attends une minute!<delay20 /><anim id="Confused" target="actor" targetSpec="" />
