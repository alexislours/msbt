	<message label="007" attrib="00 00 00 00 00 00 00 00"><anim id="Laughing" target="actor" targetSpec="" />Bien sûr, <tag a="110" b="31" arg="0xcd01" />.<delay20 /> <anim id="Eh" target="subNpc" targetSpec="" /><20_2 arg="3" />Ne
