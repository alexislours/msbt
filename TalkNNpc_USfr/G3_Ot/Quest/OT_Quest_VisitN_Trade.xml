	<message label="101_b" attrib="00 00 00 00 00 00 00 00"><anim id="EmotEnd" target="actor" targetSpec="" />Oublions ça.</message>
	<message label="102" attrib="00 00 02 00 00 00 00 00"><anim id="Grin" target="actor" targetSpec="" />Excellent choix,<delay8 /> très <gender2 m="cher" f="chère" />!<delay20 />
<anim id="FaintSmile" target="actor" targetSpec="" />Je suis prête à m'en séparer pour<tag a="110" b="0" /><delay20 />
<tag a="90" b="21" arg="0x0" />.<delay20 /><anim id="QuestionMark" target="actor" targetSpec="" /> Qu'en dis-tu?</message>
	<message label="102_a" attrib="00 00 00 00 00 00 00 00">Ça me va!</message>
	<message label="102_b" attrib="00 00 00 00 00 00 00 00"><anim id="EmotEnd" target="actor" targetSpec="" />Tout compte fait...</message>
	<message label="103" attrib="00 00 00 00 00 00 00 00"><anim id="Eh" target="actor" targetSpec="" />Je vois<tag a="110" b="0" /> Voilà qui est dommage.<delay40 />
<anim id="FaintSmile" target="actor" targetSpec="" />Enfin n'hésite pas à me faire signe
