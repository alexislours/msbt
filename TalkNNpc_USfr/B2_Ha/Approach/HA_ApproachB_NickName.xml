	<message label="004_a" attrib="00 00 00 00 00 00 00 00"><anim id="EmotEnd" target="actor" targetSpec="" />Et lequel, au juste?</message>
	<message label="004_b" attrib="00 00 00 00 00 00 00 00">Non, je te remercie.</message>
	<message label="005" attrib="00 00 02 00 00 00 00 00"><anim id="Greeting" target="actor" targetSpec="" />Je suis content de te voir.<delay40 /><anim id="BigSmile" target="actor" targetSpec="" /> Je viens
