	<message label="007" attrib="00 00 00 00 00 00 00 00"><tag a="60" b="20" /></message>
	<message label="007_01" attrib="00 00 00 00 00 00 00 00"><anim id="Smiling" target="actor" targetSpec="" /><tag a="50" b="3" /><tag a="110" b="8" /> compte deux
