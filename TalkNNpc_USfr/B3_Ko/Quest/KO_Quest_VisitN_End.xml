<msbt attribsize="8">
	<message label="001" attrib="00 00 00 00 00 00 00 00"><anim id="QuestionMark" target="actor" targetSpec="" />Tu t'en vas déjà?<delay20 /> <anim id="Smiling" target="actor" targetSpec="" />Bon ben, c'est
