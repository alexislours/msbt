	<message label="106" attrib="00 00 00 00 00 00 00 00"><anim id="Eh" target="actor" targetSpec="" />Attends un peu<tag a="110" b="0" /><delay20 /> <anim id="Pardon" target="actor" targetSpec="" />T'es <gender2 m="venu" f="venue" /> avec
