	<message label="011" attrib="00 00 00 00 00 00 00 00"><anim id="EmotEnd" target="actor" targetSpec="" />話說回來啦，<delay8 /><tag a="110" b="31" arg="0xcd01" /><tag a="110" b="0" /><20_2 arg="7" /><delay20 />
