	<message label="104" attrib="00 00 00 00 00 00 00 00"><anim id="Aha" target="actor" targetSpec="" />啊啊！<delay frames="30" /><anim id="FaintSmile" target="actor" targetSpec="" /><tag a="110" b="4" />，
